        android:background="#00FFFFFF"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Nail Cutting/Clipping"
        android:textColor="#2F3543"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
