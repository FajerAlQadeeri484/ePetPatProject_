<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E3E3"
    tools:context=".login1">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="185dp"
        android:layout_height="208dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/thelogowithnamee" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="295dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="   Username"
        android:inputType="textPersonName"
        android:textColor="#2F3543"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="453dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="   Password"
        android:inputType="textPassword"
        android:textColor="#2F3543"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="374dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="   Email"
        android:inputType="textEmailAddress"
        android:textColor="#2F3543"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="264dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Enter the following : "
        android:textColor="#2F3543"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signUp1"
        android:layout_width="162dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/round"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>